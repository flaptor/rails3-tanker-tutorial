<h1>Listing posts</h1>

<%= link_to 'New Post', new_post_path %>

<hr />

<div id="posts">
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <h4>by <%= post.name %></h4>
    <p><%= post.content %></p>
    <span> 
      <%= link_to 'Show', post %> | 
      <%= link_to 'Edit', edit_post_path(post) %> | 
      <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %> 
    </span>
  </div>
<% end %>
</div>
<br />

